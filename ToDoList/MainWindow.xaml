<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        xmlns:controls="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <ListBox Grid.Column="0" ItemsSource="{Binding Column1Items}" AllowDrop="True"
                 PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                 Drop="ListBox_Drop" Name="Column1ListBox" DisplayMemberPath="Title">
        </ListBox>

        <ListBox Grid.Column="1" ItemsSource="{Binding Column2Items}" AllowDrop="True"
                 PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                 Drop="ListBox_Drop" Name="Column2ListBox" DisplayMemberPath="Title">
        </ListBox>

        <ListBox Grid.Column="2" ItemsSource="{Binding Column3Items}" AllowDrop="True"
                 PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                 Drop="ListBox_Drop" Name="Column3ListBox" DisplayMemberPath="Title">
        </ListBox>
    </Grid>
</Window>