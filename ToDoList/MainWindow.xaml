<Window x:Class="ToDoList.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToDoList"
        xmlns:controls="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- ستون To Do -->
        <Border Grid.Column="0" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="To Do" FontWeight="Bold" Margin="5"/>
                <ListBox x:Name="ToDoList" 
                        AllowDrop="True"
                        PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                        Drop="ListBox_Drop"
                        MinHeight="300">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightYellow" 
                                  BorderBrush="Gray" 
                                  BorderThickness="1" 
                                  Margin="2"
                                  Padding="5"
                                  CornerRadius="3"
                                  MouseLeftButtonUp="Card_MouseLeftButtonUp">
                                <TextBlock Text="{Binding Title}"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- ستون In Progress -->
        <Border Grid.Column="1" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="In Progress" FontWeight="Bold" Margin="5"/>
                <ListBox x:Name="InProgressList"
                        AllowDrop="True"
                        PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                        Drop="ListBox_Drop"
                        MinHeight="300">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightBlue" 
                                  BorderBrush="Gray" 
                                  BorderThickness="1" 
                                  Margin="2"
                                  Padding="5"
                                  CornerRadius="3"
                                  MouseLeftButtonUp="Card_MouseLeftButtonUp">
                                <TextBlock Text="{Binding Title}"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- ستون Done -->
        <Border Grid.Column="2" Margin="5" BorderBrush="Gray" BorderThickness="1">
            <StackPanel>
                <TextBlock Text="Done" FontWeight="Bold" Margin="5"/>
                <ListBox x:Name="DoneList"
                        AllowDrop="True"
                        PreviewMouseLeftButtonDown="ListBox_PreviewMouseLeftButtonDown"
                        Drop="ListBox_Drop"
                        MinHeight="300">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Border Background="LightGreen" 
                                  BorderBrush="Gray" 
                                  BorderThickness="1" 
                                  Margin="2"
                                  Padding="5"
                                  CornerRadius="3"
                                  MouseLeftButtonUp="Card_MouseLeftButtonUp">
                                <TextBlock Text="{Binding Title}"/>
                            </Border>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>
    </Grid>
</Window>